<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
   >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"></LinearLayout>

    <TextView
        android:id="@+id/boughtitem"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="16dp"
        android:padding="16dp"
        android:textStyle="bold"
        android:text="@string/hello_oil"
        android:textColor="#FFFF"
        android:textSize="30sp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <TextView
            android:id="@+id/datText"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="800dp"
            android:textColor="#FFFF"
            android:padding="16dp"
            android:textSize="28sp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="TextView" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/pic"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="412dp"
            app:srcCompat="@drawable/kaffe" />

        <TextView
            android:id="@+id/productPrice"
            android:layout_width="175dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:padding="16dp"
            android:textSize="30sp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#FFFF"
            android:text="TextView" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/backb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Home" />

            <Button
                android:id="@+id/bkStore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Back" />


        </LinearLayout>


        <ImageView
            android:id="@+id/qr"
            android:layout_width="200dp"
            android:layout_height="200dp"

            android:cropToPadding="false"
            android:padding="16dp"
            android:src="@mipmap/qr" />


        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="250dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@mipmap/fb" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"

                android:src="@mipmap/phone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"></LinearLayout>


    </LinearLayout>




</LinearLayout>